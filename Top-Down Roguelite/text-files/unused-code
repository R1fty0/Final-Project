from characters import Collider
from enum import Enum
import pygame

# what do I want the player to do?:
# 1. move
# 2. shoot
# 3. interact with items


class MovementState(Enum):
    IDLE = False
    UP = False
    DOWN = False
    LEFT = False
    RIGHT = False


class Player(Collider):
    def __init__(self, x, y, width, height, speed, fire_rate, ammo):
        Collider.__init__(self, x, y, width, height)
        self.vel_x = 0
        self.vel_y = 0
        self.speed = speed

    def get_input(self):
        """ Registers inputs from the player.  """
        key_pressed = pygame.key.get_pressed()
        match key_pressed:
            case pygame.K_w:  # move up
                pass
            case pygame.K_a:  # move left
                pass
            case pygame.K_s:  # move down
                pass
            case pygame.K_d:  # move right
                pass
            case pygame.MOUSEBUTTONDOWN:  # shoot
                pass

    def move(self):
        """ Enables the player to move. """
        self.x += self.vel_x
        self.y += self.vel_y

    def update(self):
        """ Runs all player logic. """
        # movement
        self.move()
        # shooting
        # items