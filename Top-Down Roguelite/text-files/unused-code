class Weapon:
    def __init__(self, gun_image, fire_effect_image, bullet_image, fire_rate, starting_ammo, clip_size):
        self.fire_rate = fire_rate  # the gun's fire rate
        self.ammo = starting_ammo  # how much ammo the player has
        self.clip_size = clip_size  # how much ammo the player can carry in one magazine
        self.clip = starting_ammo/clip_size  # how much ammo the player has in the magazine
        self.can_shoot = True

    def update(self):
        # shoot
